<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Устанавливаем полноэкранный режим -->
        <item name="android:windowFullscreen">true</item>
        <!-- Убираем фон окна, так как у нас свой черный фон в layout -->
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="PlayerControlButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/player_control_background</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">4dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PlayerSecondaryControlButton" parent="PlayerControlButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="DarkMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/selector_menu_item_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Стиль самого виджета PopupMenu -->
    <style name="DarkPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <!-- Общий фон плашки меню -->
        <item name="android:popupBackground">@drawable/bg_player_panel</item>
        <!-- Убираем наложение на кнопку -->
        <item name="android:overlapAnchor">false</item>
    </style>

    <!-- ТЕМА, которую мы применяем в ContextThemeWrapper -->
    <style name="DarkPopupContext" parent="Theme.AppCompat.Light">
        <!-- Привязываем стиль виджета -->
        <item name="android:popupMenuStyle">@style/DarkPopupMenu</item>
        <item name="popupMenuStyle">@style/DarkPopupMenu</item>

        <!-- ВАЖНО: Фон элемента меню (работает на большинстве версий) -->
        <item name="android:itemBackground">@drawable/bg_selector_menu_item</item>

        <!-- ВАЖНО: Селектор списка (для старых версий и D-Pad навигации) -->
        <item name="android:listSelector">@drawable/bg_selector_menu_item</item>

        <!-- Цвет текста (основной) -->
        <item name="android:textColorPrimary">@color/selector_menu_item_text</item>

        <!-- Принудительно задаем стиль текста для элементов -->
        <item name="android:textAppearanceLargePopupMenu">@style/DarkMenuTextAppearance</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/DarkMenuTextAppearance</item>
    </style>

    <!-- Стили для экрана настроек -->
    <style name="SettingsSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_selector_menu_item</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_settings_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Важно: дублируем состояние родителя (LinearLayout) -->
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="SettingsItemDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_settings_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <!-- Важно: дублируем состояние родителя -->
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="SettingsItemValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_settings_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <!-- Важно: дублируем состояние родителя -->
        <item name="android:duplicateParentState">true</item>
    </style>

    <!-- Базовый стиль для всех кастомных диалогов в приложении -->
    <style name="Theme.App.Dialog" parent="Theme.AppCompat.Dialog">
        <!-- Убираем стандартный фон окна -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Убираем стандартную рамку -->
        <item name="android:windowFrame">@null</item>
        <!-- Убираем заголовок -->
        <item name="android:windowNoTitle">true</item>
        <!-- Позволяет фону быть полупрозрачным -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Отключаем затемнение фона за диалогом (у нас свой полупрозрачный фон) -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>