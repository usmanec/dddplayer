<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- При фокусе или нажатии - полупрозрачный черный -->
    <item android:state_pressed="true" android:color="#80000000"/>
    <item android:state_focused="true" android:color="#80000000"/>
    <item android:state_selected="true" android:color="#80000000"/>

    <!-- По умолчанию - белый -->
    <item android:color="@android:color/white"/>
</selector>