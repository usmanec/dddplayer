<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нажатие -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/control_halo"/>
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="@color/tv_white"/>
        </shape>
    </item>
    <!-- Фокус -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/control_accent_focus"/>
            <corners android:radius="4dp"/>
            <stroke android:width="2dp" android:color="@color/tv_white"/>
        </shape>
    </item>
    <!-- Обычное (Прозрачное с рамкой) -->
    <item>
        <shape>
            <solid android:color="@color/control_state_default"/>
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="@color/text_tertiary"/>
        </shape>
    </item>
</selector>