<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_player_panel"
    android:padding="12dp">

    <!-- Постер -->
    <androidx.cardview.widget.CardView
        android:id="@+id/poster_card"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/video_poster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/tv_banner"
            app:tint="@android:color/white"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <!-- Правый блок времени (Часы + Конец в...) -->
    <LinearLayout
        android:id="@+id/time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="19:36" />

        <TextView
            android:id="@+id/text_ends_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BBFFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            tools:text="Конец в 21:45" />
    </LinearLayout>

    <!-- Заголовок видео -->
    <!-- Привязан слева к постеру, справа к блоку времени -->
    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/poster_card"
        app:layout_constraintEnd_toStartOf="@+id/time_container"
        tools:text="Зверополис 2 (2025) – Русский трейлер" />

    <!-- Нижний ряд инфо-панели (Бейджи) -->
    <!-- Тоже ограничен справа блоком времени -->
    <LinearLayout
        android:id="@+id/info_badges_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/video_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/video_title"
        app:layout_constraintEnd_toStartOf="@+id/time_container"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/icon_input_mode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_input_mode_mono"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/icon_output_mode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_output_mode_3d_off"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/icon_swap_eyes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_swap_horiz"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/badge_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            tools:text="1080p" />

        <TextView
            android:id="@+id/badge_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="AC3 5.1" />

        <TextView
            android:id="@+id/badge_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Rus" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>