<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_player_panel"
    android:padding="12dp">

    <!-- Баннер / Постер -->
    <!-- Используем CardView для скругления углов картинки -->
    <androidx.cardview.widget.CardView
        android:id="@+id/poster_card"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/video_poster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/tv_banner"
            app:tint="@android:color/white"
            />
    </androidx.cardview.widget.CardView>

    <!-- Заголовок видео -->
    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/poster_card"
        app:layout_constraintStart_toEndOf="@id/poster_card"
        app:layout_constraintEnd_toStartOf="@+id/text_clock"
        tools:text="Зверополис 2 (2025) – Русский трейлер" />

    <!-- Часы -->
    <TextView
        android:id="@+id/text_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_title"
        app:layout_constraintBottom_toBottomOf="@id/video_title"
        tools:text="19:36" />

    <!-- Нижний ряд инфо-панели (Иконки и Байджи) -->
    <!-- Привязываем верх к низу заголовка, а низ к низу карточки постера для выравнивания -->
    <LinearLayout
        android:id="@+id/info_badges_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/video_title"
        app:layout_constraintBottom_toBottomOf="@id/poster_card"
        app:layout_constraintStart_toStartOf="@id/video_title"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Иконки режимов (Input/Output/Swap) -->
        <ImageView
            android:id="@+id/icon_input_mode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_input_mode_mono"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/icon_output_mode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_output_mode_3d_off"
            app:tint="@android:color/white"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/icon_swap_eyes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_swap_horiz"
            app:tint="@android:color/white"
            tools:visibility="gone" />

        <!-- Разрешение (value size) -->
        <TextView
            android:id="@+id/badge_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            tools:text="1920x1080" />

        <!-- Аудио дорожка -->
        <TextView
            android:id="@+id/badge_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            tools:text="AC3 5.1 - Rus" />

        <!-- Субтитры -->
        <TextView
            android:id="@+id/badge_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_player_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Rus (Forced)" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>