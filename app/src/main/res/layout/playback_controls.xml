<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_controls_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_player_panel"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true">

    <!-- 1. SeekBar (Timeline) -->
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:thumbTint="@color/tv_white"
        android:progressTint="@color/tv_white"
        android:secondaryProgressTint="@color/progress_secondary"
        android:progressBackgroundTint="@color/progress_track"
        android:splitTrack="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:nextFocusDown="@id/button_play_pause" />

    <!-- 2. Время (Текущее) - Прижато влево, под SeekBar -->
    <TextView
        android:id="@+id/time_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_white"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/seek_bar"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="00:00:48" />

    <!-- 3. Время (Длительность) - Прижато вправо, под SeekBar -->
    <TextView
        android:id="@+id/time_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_white"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/seek_bar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="00:01:55" />

    <LinearLayout
        android:id="@+id/left_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/center_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/center_controls"
        app:layout_constraintEnd_toStartOf="@id/center_controls">

        <TextView
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Ищу обновление..."
            android:textColor="@color/selector_menu_item_text"
            android:textStyle="bold"
            android:background="@drawable/bg_selector_menu_item"
            android:textSize="14sp"
            android:visibility="visible"
            app:drawableStartCompat="@drawable/ic_update"
            android:focusable="true"
            android:clickable="true"
            tools:visibility="visible" />

    </LinearLayout>
    <!-- 4. Центральный блок управления -->
    <!-- layout_height="wrap_content" и привязка к верху и низу центрирует его
         относительно элементов по бокам, если нужно, или просто под SeekBar -->
    <LinearLayout
        android:id="@+id/center_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/seek_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Prev -->
        <ImageButton
            android:id="@+id/button_prev"
            style="@style/PlayerSecondaryControlButton"
            android:src="@drawable/ic_skip_previous"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:padding="12dp"
            android:nextFocusUp="@id/seek_bar"/>

        <!-- Rewind -->
        <ImageButton
            android:id="@+id/button_rewind"
            style="@style/PlayerSecondaryControlButton"
            android:src="@drawable/ic_fast_rewind"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:layout_marginHorizontal="4dp"
            android:padding="12dp"
            android:nextFocusUp="@id/seek_bar"/>

        <!-- Play/Pause -->
        <ImageButton
            android:id="@+id/button_play_pause"
            style="@style/PlayerControlButton"
            android:src="@drawable/ic_play_arrow"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:layout_marginHorizontal="12dp"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:nextFocusUp="@id/seek_bar"/>

        <!-- Forward -->
        <ImageButton
            android:id="@+id/button_ffwd"
            style="@style/PlayerSecondaryControlButton"
            android:src="@drawable/ic_fast_forward"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:layout_marginHorizontal="4dp"
            android:padding="12dp"
            android:nextFocusUp="@id/seek_bar"/>

        <!-- Next -->
        <!-- Убрали явный nextFocusRight, чтобы фокус летел в right_controls -->
        <ImageButton
            android:id="@+id/button_next"
            style="@style/PlayerSecondaryControlButton"
            android:src="@drawable/ic_skip_next"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:padding="12dp"
            android:nextFocusUp="@id/seek_bar"/>

    </LinearLayout>

    <!-- 5. Правый блок настроек -->
    <!-- gravity="end" прижимает содержимое вправо -->
    <!-- width="0dp" и привязка к center_controls гарантирует, что блок не наедет на центр -->
    <LinearLayout
        android:id="@+id/right_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/center_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/center_controls"
        app:layout_constraintStart_toEndOf="@id/center_controls">

        <!-- Quality -->
        <!-- Убрали явный nextFocusLeft, чтобы фокус летел в center_controls -->
        <TextView
            android:id="@+id/button_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1080p"
            android:textColor="@color/selector_menu_item_text"
            android:textStyle="bold"
            android:background="@drawable/bg_selector_menu_item"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginEnd="4dp"
            android:nextFocusUp="@id/seek_bar"/>

        <!-- Playlist -->
        <!-- Если visibility="gone", следующие элементы сдвинутся вправо -->
        <ImageButton
            android:id="@+id/button_playlist"
            style="@style/PlayerSecondaryControlButton"
            android:src="@drawable/ic_playlist_play"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:padding="8dp"
            android:nextFocusUp="@id/seek_bar"/>

        <!-- Settings -->
        <ImageButton
            android:id="@+id/button_settings"
            style="@style/PlayerSecondaryControlButton"
            android:src="@drawable/ic_settings"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/tv_white"
            android:padding="8dp"
            android:nextFocusUp="@id/seek_bar"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>