<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    tools:context=".ui.PlayerFragment">

    <!-- Слой видео (OpenGL) -->
    <top.rootu.dddplayer.renderer.StereoGLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Слой субтитров (Одиночный) -->
    <androidx.media3.ui.SubtitleView
        android:id="@+id/subtitle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="visible"/>

    <!-- Слой субтитров (Двойной - для Cardboard VR) -->
    <LinearLayout
        android:id="@+id/subtitle_split_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"
        android:baselineAligned="false">

        <androidx.media3.ui.SubtitleView
            android:id="@+id/subtitle_view_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <androidx.media3.ui.SubtitleView
            android:id="@+id/subtitle_view_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Сенсорная зона -->
    <View
        android:id="@+id/touch_zone_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:clickable="true"
        android:focusable="false"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/fps_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="FPS: 60" />

    <!-- OSD Панель настроек -->
    <include layout="@layout/layout_top_settings_panel" />

    <!-- Панель управления -->
    <include
        android:id="@+id/playback_controls"
        layout="@layout/playback_controls"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Индикатор буферизации (Одиночный) -->
    <ProgressBar
        android:id="@+id/buffering_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Индикатор буферизации (Двойной - для Cardboard VR) -->
    <LinearLayout
        android:id="@+id/buffering_split_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:visibility="gone"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ProgressBar
                android:id="@+id/loader_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ProgressBar
                android:id="@+id/loader_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>