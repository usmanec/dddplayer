<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_player_panel"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доступно обновление"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_error_details"
        android:minHeight="100dp"
        android:maxHeight="300dp">

        <TextView
            android:id="@+id/update_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список изменений..."
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>

    <ProgressBar
        android:id="@+id/update_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/progress_update"
        android:max="100"
        android:visibility="gone" />

    <TextView
        android:id="@+id/update_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Скачивание..."
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_accent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="ОТМЕНА"
            android:textColor="#AAAAAA"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_button_accent"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="ОБНОВИТЬ"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:focusable="true"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>